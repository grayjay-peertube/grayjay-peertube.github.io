# Force exact versions for new installs
save-exact=true

# Prevent automatic package-lock.json updates
package-lock=true

# Use exact versions when installing
save-prefix=""

# Enhanced security and reproducibility
audit-level=moderate
fund=false
update-notifier=false

# Ensure consistent behavior across environments
engine-strict=true
legacy-peer-deps=false

# Cache settings for reproducibility
prefer-offline=true

# Registry settings
registry=https://registry.npmjs.org/


